<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\CatalogueScanner.Core\CatalogueScanner.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectCapability Include="AzureFunctions" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Localisation\**\*.po">
      <Link>Localisation\CatalogueScanner.SaleFinder\%(RecursiveDir)%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Remove="coles-initial-response.html" />
    <None Remove="service-worker.js" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="coles-initial-response.html">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="service-worker.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="PlaywrightSharp" Version="0.192.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="ColesOnlineRequestResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ColesOnlineRequestResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="ColesOnlineRequestResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ColesOnlineRequestResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="dotnet tool restore&#xD;&#xA;dotnet tool run extractpo -- . .\Localisation\Template" />
  </Target>
</Project>
